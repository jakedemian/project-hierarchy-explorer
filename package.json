{
  "name": "project-hierarchy-explorer",
  "displayName": "Project Hierarchy Explorer",
  "description": "Quickly and easily output your full project tree / hierarchy to a text file.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "project-hierarchy-explorer.generate",
        "title": "Project Hierarchy Explorer: Generate"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Project Hierarchy Explorer",
      "properties": {
        "project-hierarchy-explorer.ignorePatterns": {
          "type": "array",
          "default": [],
          "description": "Array of patterns to ignore when generating the directory structure."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "minimatch": "^5.1.2"
  }
}
